<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="softreference-example">
        <createTable tableName="TAG">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TAG"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="DOCUMENT_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="softreference-example">
        <addForeignKeyConstraint baseColumnNames="DOCUMENT_ID" baseTableName="TAG" constraintName="FK_TAG_ON_DOCUMENT"
                                 referencedColumnNames="ID" referencedTableName="DOCUMENT"/>
    </changeSet>
</databaseChangeLog>